{
  "manifest_version": 2,
  "name": "万能辅助工具",
  "description": "Numberian's Extension",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": {
      "32": "img/favicon32.png",
      "64": "img/favicon64.png",
      "128": "img/favicon128.png"
    },
    "default_title": "万能辅助工具",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html",
  "permissions": [
    "contextMenus",
    "management",
    "tabs",
    "bookmarks",
    "activeTab",
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/main.css",
        "font/iconfont.css"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "lib/qrcode.min.js",
        "js/content.js",
        "lib/drag.js"
      ]
    }
  ]
}
